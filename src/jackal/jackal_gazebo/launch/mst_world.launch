<launch>

<!-- Simulation parameters and simulation word is determined under this code block for simulation-->
    <arg name="use_sim_time" default="true" />
    <arg name="gui" default="true" />
    <arg name="headless" default="false" />
    <arg name="world_name" default= "/home/ekincoban/catkin_ws/src/jackal/jackal_gazebo/worlds/sim_world.world"/>
    

<!-- In order to create a world we setup the empty_world.launch from the ROS - Gazebo -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="debug" value="0" />
    <arg name="use_sim_time" value="true" />
    <arg name="gui" value="$(arg gui)" />
    <arg name="world_name" value="$(arg world_name)" />
    <arg name="headless" value="$(arg headless)" />
  </include>

<!-- Configuration of Jackal which you would like to simulate.
       See jackal_description for details. -->
    <arg name="front_laser" default="false" />
    <arg name="default_config" value="front_laser" if="$(arg front_laser)" />
    <arg name="default_config" value="base" unless="$(arg front_laser)" />
    <arg name="config" default="$(arg default_config)" />

  <!-- We are spawning our fully equiped (2 Lidars , 2 BB2 Cameras and 1 Flea3 camera) jackal here-->
  <include file="$(find jackal_gazebo)/launch/spawn_jackal.launch">
    <arg name="x" value="5" />
    <arg name="y" value="5" />
    <arg name="z" value="1.0" />
    <arg name="yaw" value="0" />
    <arg name="config" value="$(arg config)" />
  </include>

</launch>